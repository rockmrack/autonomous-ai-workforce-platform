# ===========================================
# AI WORKFORCE PLATFORM - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your values

# Application
APP_NAME=ai-workforce-platform
APP_ENV=development  # development, staging, production
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_workforce
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1
REDIS_CELERY_URL=redis://localhost:6379/2

# RabbitMQ (optional, alternative to Redis for Celery)
# RABBITMQ_URL=amqp://user:password@localhost:5672/

# ===========================================
# AI MODEL PROVIDERS
# ===========================================

# Anthropic (Primary)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_DEFAULT_MODEL=claude-sonnet-4-20250514
ANTHROPIC_FAST_MODEL=claude-3-haiku-20240307
ANTHROPIC_POWERFUL_MODEL=claude-opus-4-20250514

# OpenAI (Secondary/Fallback)
OPENAI_API_KEY=sk-...
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_FAST_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Local Models (Optional - Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:70b

# ===========================================
# VECTOR DATABASE
# ===========================================

# Pinecone
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=ai-workforce

# Or use pgvector (already in PostgreSQL)
USE_PGVECTOR=true

# ===========================================
# PLATFORM INTEGRATIONS
# ===========================================

# Upwork
UPWORK_CLIENT_ID=...
UPWORK_CLIENT_SECRET=...

# Indeed
INDEED_API_KEY=...

# Reddit
REDDIT_CLIENT_ID=...
REDDIT_CLIENT_SECRET=...
REDDIT_USER_AGENT=AI-Workforce-Bot/2.0

# Discord
DISCORD_BOT_TOKEN=...

# Twitter/X
TWITTER_API_KEY=...
TWITTER_API_SECRET=...
TWITTER_BEARER_TOKEN=...

# LinkedIn (Unofficial)
# Note: LinkedIn doesn't have public API for job scraping
# Use browser automation with caution

# ===========================================
# BROWSER AUTOMATION & ANTI-DETECTION
# ===========================================

# Proxy Services
PROXY_PROVIDER=brightdata  # brightdata, oxylabs, smartproxy
BRIGHTDATA_ZONE=residential
BRIGHTDATA_USERNAME=...
BRIGHTDATA_PASSWORD=...

# Alternative: Oxylabs
OXYLABS_USERNAME=...
OXYLABS_PASSWORD=...

# CAPTCHA Solving
CAPTCHA_PROVIDER=2captcha  # 2captcha, anticaptcha, capsolver
TWOCAPTCHA_API_KEY=...
ANTICAPTCHA_API_KEY=...

# Browser Fingerprinting
FINGERPRINT_SERVICE=browserless  # browserless, multilogin
BROWSERLESS_API_KEY=...

# ===========================================
# QUALITY ASSURANCE
# ===========================================

# Plagiarism Checking
COPYSCAPE_API_KEY=...
COPYSCAPE_USERNAME=...

# AI Detection
ORIGINALITY_AI_API_KEY=...
GPTZERO_API_KEY=...

# Grammar Checking
GRAMMARLY_API_KEY=...
LANGUAGETOOL_API_KEY=...

# ===========================================
# EMAIL & COMMUNICATION
# ===========================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=...
SMTP_PASSWORD=...
SMTP_FROM_EMAIL=noreply@yourdomain.com

# SendGrid (Alternative)
SENDGRID_API_KEY=...

# ===========================================
# PAYMENT & FINANCE
# ===========================================

# Wise (for withdrawals)
WISE_API_KEY=...

# PayPal
PAYPAL_CLIENT_ID=...
PAYPAL_CLIENT_SECRET=...

# Cryptocurrency (optional)
COINBASE_API_KEY=...

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Sentry
SENTRY_DSN=...
SENTRY_ENVIRONMENT=development

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json, text

# ===========================================
# DASHBOARD
# ===========================================

# NextAuth
NEXTAUTH_SECRET=...
NEXTAUTH_URL=http://localhost:3000

# Dashboard API
API_BASE_URL=http://localhost:8000
WEBSOCKET_URL=ws://localhost:8000/ws

# ===========================================
# RATE LIMITS & SAFETY
# ===========================================

# Per-agent limits (per hour)
MAX_PROPOSALS_PER_HOUR=5
MAX_MESSAGES_PER_HOUR=20
MAX_JOB_APPLICATIONS_PER_DAY=30

# Global limits
MAX_CONCURRENT_AGENTS=100
MAX_CONCURRENT_JOBS=50

# ===========================================
# FEATURE FLAGS
# ===========================================

ENABLE_AUTO_BIDDING=true
ENABLE_AUTO_MESSAGING=true
ENABLE_LEARNING_SYSTEM=true
ENABLE_AB_TESTING=true
ENABLE_MARKET_INTELLIGENCE=true

# ===========================================
# ML MODEL PATHS (for local models)
# ===========================================

JOB_SCORING_MODEL_PATH=models/job_scorer.pkl
SUCCESS_PREDICTOR_MODEL_PATH=models/success_predictor.pkl
PRICE_OPTIMIZER_MODEL_PATH=models/price_optimizer.pkl
